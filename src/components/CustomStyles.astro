---
import '@fontsource-variable/montserrat';
import '@fontsource-variable/oswald';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Montserrat Variable';
    --aw-font-serif: 'Montserrat Variable';
    --aw-font-heading: 'Oswald Variable';

    --aw-color-primary: rgb(56 182 255);
    --aw-color-secondary: rgb(87 74 226);
    --aw-color-accent: rgb(194 151 184);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(10 17 40);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Montserrat Variable';
    --aw-font-serif: 'Montserrat Variable';
    --aw-font-heading: 'Oswald Variable';

    --aw-color-primary: rgb(56 182 255);
    --aw-color-secondary: rgb(87 74 226);
    --aw-color-accent: rgb(194 151 184);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(10 17 40);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
